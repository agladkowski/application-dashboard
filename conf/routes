# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                                         controllers.Application.applications
GET        /applications                             controllers.Application.applications
GET        /environments                             controllers.Application.environments
GET        /applications/:applicationName            controllers.Application.application(applicationName: String)
GET        /environments/:environmentName            controllers.Application.environment(environmentName: String)
GET        /status/:appName/:versionParamName/:version  controllers.TestStatusPages.status(appName: String, versionParamName: String, version: String)
GET        /status/timeout                           controllers.TestStatusPages.timeout
GET        /admin/env                                controllers.AdminEndpoints.statusPage
GET        /admin/config                             controllers.AdminEndpoints.viewCurrentConfig
POST       /admin/config                             controllers.AdminEndpoints.updateCurrentConfig
GET        /admin/viewConfigHistory                  controllers.AdminEndpoints.viewConfigHistory
GET        /admin/deleteConfig/:configName           controllers.AdminEndpoints.deleteConfig(configName: String)
GET        /admin/viewConfig/:configName             controllers.AdminEndpoints.viewConfig(configName: String)

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                             controllers.Assets.at(path="/public", file)

    